{
  "id": "http://yourdomain.com/schemas/myschema.json",
  "description": "Array example",
  "type": "object",
  "properties": {
    "required": {
      "description": "required array",
      "type": "array",
      "items": {
        "description": "a string",
        "type": "string"
      }
    },
    "default": {
      "description": "array with default",
      "type": "array",
      "items": {
        "description": "a string",
        "type": "string"
      },
      "default": []
    },
    "optional": {
      "description": "optional array",
      "type": "array",
      "items": {
        "description": "a number",
        "type": "number"
      }
    },
    "multiple_types": {
      "description": "multiple types array",
      "type": "array",
      "items": {
        "description": "a number or string",
        "type": ["number", "string"]
      }
    },
    "undefined_items": {
      "description": "array without items definition",
      "type": "array"
    },
    "boolean_items": {
      "description": "array with boolean items definition",
      "type": "array",
      "items": true
    },
    "mixed_items": {
      "description": "array with items of mixed types",
      "type": "array",
      "items": {
        "type": ["string", 1]
      }
    },
    "non_typed_items": {
      "description": "array with items with no type",
      "type": "array",
      "items": {
        "description": "a n item of unknown type"
      }
    }
  },
  "required": ["required"]
}
