{
  "name": "jsonschema-avro",
  "version": "1.8.1",
  "description": "Convert JSON-schema into avro schema",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "ci": "npm run lint && npm run coverage",
    "lint": "eslint .",
    "test:unit": "mocha -r ts-node/register  src/*.test.ts src/**/*.test.ts",
    "test:integration": "mocha -r ts-node/register test/integration/**/*.integration.ts",
    "test": "npm run test:unit && npm run test:integration",
    "format": "prettier --write .",
    "coverage": "nyc npm run test",
    "coverage:html": "npm run coverage; open coverage/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thedumbterminal/jsonschema-avro.git"
  },
  "keywords": [
    "json-schema",
    "jsonschema",
    "avro"
  ],
  "author": {
    "name": "thedumbterminal",
    "email": "github@thedumbterminal.co.uk",
    "url": "http://www.thedumbterminal.co.uk"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thedumbterminal/jsonschema-avro/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/thedumbterminal/jsonschema-avro/blob/master/LICENSE"
    }
  ],
  "homepage": "https://github.com/thedumbterminal/jsonschema-avro#readme",
  "devDependencies": {
    "@types/json-schema": "7.0.11",
    "@types/mocha": "10.0.1",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "avsc": "^5.7.7",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-clean-code": "0.1.12",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-mocha": "^10.1.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 81,
    "lines": 94,
    "functions": 100,
    "statements": 94
